<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cars_list"
            app:layout_constraintHorizontal_weight="0.50"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toLeftOf="@id/conteneur_fragment"
            app:layout_constraintBottom_toTopOf="@id/bottom_bar"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout android:id="@+id/bottom_bar"
                  android:layout_width="match_parent"
                  android:translationZ="10dp"
                  android:layout_height="50dp"
                  android:gravity="center"
                  android:layout_gravity="bottom"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:background="@color/colorGrey"
                  android:orientation="horizontal">
        <Switch
                android:id="@+id/switch_favorite"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/label_favorite"
                android:text="@string/label_favorite"
                android:textColor="@color/colorDarkGrey"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
            android:id="@+id/conteneur_fragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#B6D5F2"
            app:layout_constraintHorizontal_weight="0.50"
            app:layout_constraintLeft_toRightOf="@id/cars_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>